            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:theme="@style/NoAppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".LoginActivity"
            android:theme="@style/NoAppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".Registration"
            android:theme="@style/NoAppTheme"
