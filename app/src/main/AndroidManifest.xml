            android:screenOrientation="portrait"/>

        <activity android:name=".ForgotPassword"
            android:theme="@style/NoAppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".FirstTime"
            android:theme="@style/NoAppTheme"
