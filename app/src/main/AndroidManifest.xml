        <activity android:name=".SlideAdapter"
            android:theme="@style/NoAppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".HowtoRegisterActivity"
            android:theme="@style/NoAppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".HowtoLoginActivity"
            android:theme="@style/NoAppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".HowtoRepassActivity"
            android:theme="@style/NoAppTheme"
            android:screenOrientation="portrait"/>

        <activity android:name=".HowtoUseVoiceActivity"
